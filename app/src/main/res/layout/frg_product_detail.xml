<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    android:orientation="vertical"
    android:padding="@dimen/j10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:orientation="vertical"
                android:padding="@dimen/j10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j5dp"
                    android:orientation="horizontal">

                    <com.mdx.framework.widget.MImageView
                        android:id="@+id/mMImageView"
                        android:layout_width="@dimen/j50dp"
                        android:layout_height="@dimen/j50dp"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/j50dp"
                        android:layout_marginLeft="@dimen/j13dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextView_title"
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="途牛网" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mTextView_time"
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="放款时间：1-24小时" />

                            <TextView
                                android:id="@+id/mTextView_count"
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="申请成功：人" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/j10dp"
                    android:background="@color/tyD1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j70dp"
                    android:layout_marginTop="@dimen/j10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="额度" />

                        <TextView
                            android:id="@+id/mTextView_ed"
                            style="@style/text_style_13_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="期限" />

                        <TextView
                            android:id="@+id/mTextView_qx"
                            style="@style/text_style_13_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参考月利率" />

                        <TextView
                            android:id="@+id/mTextView_lf"
                            style="@style/text_style_13_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j10dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/shape_white"
                android:orientation="vertical"
                android:padding="@dimen/j10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="金额" />

                        <EditText
                            android:id="@+id/mTextView_price"
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/A" />

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j10dp"
                        android:background="@color/tyD1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="期限" />

                        <EditText
                            android:id="@+id/mTextView_qxr"
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:gravity="center"
                            android:inputType="number" />

                        <TextView
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j10dp"
                        android:background="@color/tyD1" />

                    <TextView
                        android:id="@+id/mTextView_priceall"
                        style="@style/text_style_13_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/j10dp"
                        android:text="预计还款总额：元" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j80dp"
                    android:src="@drawable/zujian" />

                <TextView
                    android:id="@+id/mImageView_dl"
                    style="@style/text_style_15_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j3dp"
                    android:layout_marginRight="@dimen/j3dp"
                    android:layout_marginTop="@dimen/j8dp"
                    android:background="@drawable/shape_red_zc"
                    android:gravity="center"
                    android:padding="@dimen/j10dp"
                    android:text="立即申请" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chanping_sqtj" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="申请条件"
                            android:textColor="#FA834C" />

                        <TextView
                            android:id="@+id/mTextView_tj"
                            style="@style/text_style_13_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j8dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chanping_sxcl" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="所需材料"
                            android:textColor="#FA834C" />

                        <TextView
                            android:id="@+id/mTextView_cl"
                            style="@style/text_style_13_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j8dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j8dp"
                    android:layout_marginTop="@dimen/j15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chanping_sqyd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_15_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="申请要点"
                            android:textColor="#FA834C" />

                        <TextView
                            android:id="@+id/mTextView_yd"
                            style="@style/text_style_13_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

