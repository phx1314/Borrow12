<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="@dimen/j10dp">

    <com.mdx.framework.widget.MImageView
        android:id="@+id/mMImageView"
        android:layout_width="@dimen/j65dp"
        android:layout_height="@dimen/j65dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j65dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTextView_title"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mTextView_type"
                style="@style/text_style_11_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red"
                android:padding="@dimen/j1dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mTextView_content"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_11_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lv"
                android:gravity="center"
                android:text="息" />

            <TextView
                android:id="@+id/mTextView_content2"
                style="@style/text_style_11_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/j5dp"
                android:gravity="center" />

            <TextView
                style="@style/text_style_11_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j25dp"
                android:background="@drawable/hong"
                android:gravity="center"
                android:text="额" />

            <TextView
                android:id="@+id/mTextView_content3"
                style="@style/text_style_11_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/j5dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

