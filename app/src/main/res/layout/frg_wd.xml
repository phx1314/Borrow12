<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout_gr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j120dp"
        android:background="@color/A"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/j12dp">

        <com.mdx.framework.widget.MImageView
            android:id="@+id/mMImageView"
            android:layout_width="@dimen/j60dp"
            android:layout_height="@dimen/j60dp"
            android:src="@drawable/wode_touxiang" />

        <TextView
            android:id="@+id/mTextView_name"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j15dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/tiaozhuan"
            android:text="立即登录" />
    </LinearLayout>

    <TextView
        android:id="@+id/mTextView1"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/gerenziliao"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="个人资料" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j20dp"
        android:layout_marginRight="@dimen/j20dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView2"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/list_wodejiekuan"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="我的借款"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mTextView3"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/list_yaoqinghaoyou"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="邀请好友" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j20dp"
        android:layout_marginRight="@dimen/j20dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView4"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/list_bangzhuzhognz"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="帮助中心" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="#F7F7F9" />

    <TextView
        android:id="@+id/mTextView5"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/list_gzh"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="关注公众号" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j20dp"
        android:layout_marginRight="@dimen/j20dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView6"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j50dp"
        android:drawableLeft="@drawable/list_shehzi"
        android:drawablePadding="@dimen/j10dp"
        android:drawableRight="@drawable/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j20dp"
        android:paddingRight="@dimen/j20dp"
        android:text="设置" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F9" />
</LinearLayout>

