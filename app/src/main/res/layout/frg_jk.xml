<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/A">

        <TextView
            style="@style/text_style_17_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="借款" />

        <TextView
            android:id="@+id/mTextView_pax"
            style="@style/text_style_13_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/jiekuan_paixu"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:text="默认排序" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/j5dp"
        android:paddingLeft="@dimen/j2dp"
        android:paddingRight="@dimen/j2dp"
        android:paddingTop="@dimen/j5dp">

        <LinearLayout
            android:id="@+id/mLinearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_whitek"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTextView_left"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/j8dp"
                android:drawableRight="@drawable/jiekuan_xiala"
                android:padding="@dimen/j10dp"
                android:text="金额不限" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_whitek"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTextView_right"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/j8dp"
                android:drawableRight="@drawable/jiekuan_xiala"
                android:padding="@dimen/j10dp"
                android:text="类型不限" />
        </LinearLayout>
    </LinearLayout>

    <com.ab.view.pullview.AbPullListView
        android:id="@+id/mMListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line"
        android:fadingEdge="none"
        android:listSelector="#00000000" />
</LinearLayout>

